<div class="container" style="margin-top: 100px;">
  <div class="row">
    <div class="col-lg-4">
      <div class="card card-profile">
        <div class="card-body text-center">
          <%= image_tag("mayi.jpg", :height => "100", :style => "border-radius:
          100px;")%>
          <h3 class="mb-3" style="margin-top:20px;"><%= @user.name %></h3>
        </div>
      </div>
      <form class="card">
        <div class="card-body">
          <h3 class="card-title">个人介绍</h3>
          <div>
            <label class="form-label">邮箱：</label>
            <%= @user.email %>
          </div>
          <div>
            <label class="form-label">电话：</label>
            <%= @user.tel %>
          </div>

          <div>
            <label class="form-label">生日：</label>
            <%= @user.birthday %>
          </div>
        </div>
        <div class="card-footer text-right">
          <button class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
    <div class="col-lg-8">
      <form class="card">
        <div class="card-body">
          <h3 class="card-title">编辑个人资料</h3>
          <%= form_with(model: @user, local: true) do |form| %>
          <div class="row">
            <div class="col-sm-6 col-md-6">
              <div class="form-group mb-4">
                <div class="field">
                  <%= form.label :nickname, "昵称", :class =>"form-label" %> <%=
                  form.text_field :nickname, :class => "form-control" %>
                </div>
              </div>
            </div>
            <div class="col-sm-6 col-md-6">
              <div class="form-group mb-4">
                <div class="field">
                  <%= form.label :email, "邮箱", :class =>"form-label" %> <%=
                  form.text_field :email, :class => "form-control" %>
                </div>
              </div>
            </div>

            <div class="col-sm-6 col-md-6">
              <div class="form-group mb-4">
                <div class="field">
                  <%= form.label :tel, "联系电话", :class =>"form-label" %> <%=
                  form.text_field :tel, :class => "form-control" %>
                </div>
              </div>
            </div>
            <div class="col-sm-6 col-md-6">
              <div class="form-group mb-4">
                <div class="field">
                  <%= form.label :birthday, "生日", :class =>"form-label" %> <%=
                  form.text_field :birthday, :class => "form-control" %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer text-right">
          <div class="actions">
            <%= form.submit "Create", class:"btn btn-primary"%>
          </div>
        </div>
        <% end %>
      </form>
    </div>
  </div>
</div>
