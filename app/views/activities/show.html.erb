<div class="card">
  <div class="card-body" style="margin-top:50px;">
    <div class="container mb-5">
      <h4><%= @activity.start_time.strftime("%A, %B %d, %Y")%></h4>
      <h1><%= @activity.name %></h1>
      <div class="flex media" style="margin-top:20px;">
        <%= image_tag("mayi.jpg", :alt => "Example Navbar 1", :class => "mr-2",
        :height => "56", :style => "border-radius: 56px;")%>
        <div class="media-body" style="margin-left:10px;">
          <h5>发起人</h5>
          yangchen
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container" style="margin-top:50px;">
  <div class="row">
    <div class="col-8">
      <div class="col-11">
        <%= image_tag(@activity.pic_url, :class => "img-fluid")%>
        <h3 style="margin-top:50px;">活动详情</h3>
        <p><%= @activity.detail %></p>
        <h3>参与人</h3>
        <div class="col-md-12">
          <div class="row">

            <% @activity.attends.all.each do |attend|%>
            <% user = User.find(attend.user_id) %>
            <div class="col-md-3">
              <div class="card">
                <div class="card-body" style="text-align:center;">
                  <%= image_tag(user.photo_url, :height => "56", :style =>
                  "border-radius: 56px;")%>
                  <div class="card-name" style="margin-top:20px;">
                    <%= user.nickname %>
                  </div>
                </div>
              </div>
            </div>
            <% end%>
          </div>
        </div>
            
        <h3 style="margin-top:50px;">评论</h3>
           
            
            <ul class="list-unstyled">
              <% @activity.comments.order('created_at').each do |comment|%>
              
              <li class="media">
                <%= image_tag(comment.user.photo_url, :class => "align-self-center", :height => "56", :style =>
                "border-radius: 56px;")%>
                <div class="media-body col-md-12">
                  <h5 class="mt-0 mb-1"><%= comment.user.name%></h5>
                  <p><%= comment.content%></p>
                </div>
              </li>
              <% end %>

              <hr></hr>
              <%= form_tag(comments_path(activity_id: @activity), method: "post") do %>
              <li class="media">
                <%= image_tag(@user.photo_url, :height => "56", :style => "border-radius: 56px;")%>
                <div class="media-body col-md-12" style="text-align: center;">
                  <div class="input-group mb-3">
                    
                    <%= text_field_tag :content, "", class: "form-control", placeholder:"评论内容"%>
                    <div class="input-group-append">   
                      <%= submit_tag("评论", class:"btn btn-primary", style: "color:white;") %>
                    </div>
                  </div>
                </div>

                <% end %>
              </li>
            </ul>
      </div>
    </div>
    <div class="col-4">
      <div class="card">
        <div class="card-body">
          <div class="container mb-5">
            <div class="media">
              <i class="far fa-clock fa-fw fa-2x" style="color: gray;"></i>
              <div class="media-body" style="margin-left:10px;">
                <%= @activity.start_time.strftime("%A, %B %d, %Y %H:%M")%>
              </div>
            </div>

            <div class="media" style="margin-top:20px;">
              <i
                class="fas fa-map-marker-alt fa-fw fa-2x"
                style="color: gray;"
              ></i>
              <div class="media-body" style="margin-left:10px;">
                <%= @activity.location %>
              </div>
            </div>

            <div class="media" style="margin-top:20px;">
              <i class="fas fa-phone fa-fw fa-2x " style="color: gray;"></i>
              <div class="media-body" style="margin-left:10px;">
              <%= User.find(@activity.host).tel %>
              </div>
            </div>


            <div class="media" style="margin-top:20px;">
              <i class="far fa-envelope fa-fw fa-2x" style="color: gray;"></i>
              <div class="media-body" style="margin-left:10px;">
                <%= User.find(@activity.host).email %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<p>
  <strong>Description:</strong>
  <%= @activity.description %>
</p>

<p>
  <strong>Detail:</strong>
  <%= @activity.detail %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @activity.start_time %>
</p>

<p>
  <strong>Location:</strong>
  <%= @activity.location %>
</p>

<p>
  <strong>Pic url:</strong>
  <%= @activity.pic_url %>
</p>

<p>
  <strong>Max number:</strong>
  <%= @activity.max_number %>
</p>

