<div class="container">
    <div class="row text-center">
        <div class="col-2"></div>
        <div class="col-8">
            <div class="card" style="margin-top: 200px;">
                <h4 style="margin-top: 20px;">发布新活动</h4>
                <%= form_with(model: @activity, local: true) do |form| %> <% if @activity.errors.any? %>
                <div id="error_explanation">
                    <ul>
                        <% @activity.errors.full_messages.each do |message| %>
                        <div class="alert alert-danger" role="alert">
                            <%= message %>
                        </div>
                        <% end %>
                    </ul>
                </div>
                <% end %>
                <div class="row mb-2">

                    <div class="col-12">

                        <div class="row">
                            <div class="form-group col-md-2"></div>
                            <div class="form-group col-md-8">
                                <div class="input-group input-group-seamless">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fa fa-user" style="color:#abb6bf;"></i>
                                        </span>
                                    </span>


                                    <%= form.text_field :name, class: "form-control", id: "form-name", placeholder: "活动名称"%>


                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-2"></div>
                            <div class="form-group col-md-8">
                                <div class="input-group input-group-seamless">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fa fa-user" style="color:#abb6bf;"></i>
                                        </span>
                                    </span>
                        
                                    <%= form.select :tag, Tag.all.collect{|t| [t.name, t.id]},{include_blank: "活动类型"}, { :class => 'custom-select' } %>
                                    
                        
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-2"></div>
                            <div class="form-group col-md-8">
                                <div class="input-group input-group-seamless">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fa fa-user" style="color:#abb6bf;"></i>
                                        </span>
                                    </span>

                                    <%= form.text_field :description, class: "form-control", id: "form-description", placeholder: "简短介绍活动"%>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-2"></div>
                            <div class="form-group col-md-8">
                                <div class="input-group input-group-seamless">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fa fa-user" style="color:#abb6bf;"></i>
                                        </span>
                                    </span>

                                    <%= form.text_area :detail, class: "form-control", id: "form-detail", placeholder: "活动详情", style: "height:300px;"%>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-2"></div>
                            <div class="form-group col-md-8">
                                    <%= form.label "开始时间" %>
                                    <%= form.datetime_select :start_time %>
                                
                            </div>
                        </div>


                        <div class="row">
                            <div class="form-group col-md-2"></div>
                            <div class="form-group col-md-8">
                                <div class="input-group input-group-seamless">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fa fa-user" style="color:#abb6bf;"></i>
                                        </span>
                                    </span>
                                    <%= form.text_field :location, class: "form-control", id: "form-location", placeholder: "活动地点"%>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="form-group col-md-2"></div>
                            <div class="form-group col-md-8">
                                <div class="input-group input-group-seamless">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fa fa-user" style="color:#abb6bf;"></i>
                                        </span>
                                    </span>
                                    <%= form.text_field :max_number, class: "form-control", id: "form-max_number", placeholder: "活动最大人数"%>
                                </div>
                            </div>
                        </div>
                    
                        <div class="row">
                            <div class="form-group col-md-2"></div>
                            <div class="form-group col-md-8">
                                <div class="input-group input-group-seamless">

                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="form-file">
                                        <label class="custom-file-label">选择活动图片</label>

                                    </div>
                                    <button id="submit-button22" class="btn btn-primary" type="button">上传图片</button>


                                    
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-2"></div>
                            <div class="form-group col-md-8">
                                <div class="input-group input-group-seamless">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fa fa-user" style="color:#abb6bf;"></i>
                                        </span>
                                    </span>
                        
                                    <%= form.text_field :pic_url, readonly:"readonly", class: "form-control", id: "form-file-url"%>
                        
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-2"></div>
                            <div class="form-group col-md-8">
                            <img src="" class="img" style="width: 100px;">
                            </div>
                        </div>

                        






                        <div class="actions">

                            <%= form.submit "发布", class:"btn btn-primary", id:"sub12"%>
                        </div>
                        <% end %>

                    </div>

                </div>

            </div>

        </div>
    </div>


    <script>


        $('#submit-button22').click(function () {
            var files = $('#form-file').prop('files');
            var data = new FormData();
            console.log(files);
            data.append('image', files[0]);
            data.append('key', 'aa6181d108ad788652bcd76729193a18');
            $('#sub12').addClass('disabled');
            $.ajax({
                url: 'https://api.imgbb.com/1/upload',
                type: 'POST',
                data: data,
                cache: false,
                processData: false,
                contentType: false,
                async: true,//异步
                success: function (json) {
                    $('#sub12').removeClass('disabled');
                    console.log(json);
                    
                    if (json.success === true) {
                        console.log(json.data.url);
                        $('#form-file-url').val(json.data.url);
                        $(".img").attr("src", json.data.url);
                    }
                }
            });
        });
    </script>